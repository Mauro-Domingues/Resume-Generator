{{#if specialization}}
<section id="specialization">
  <header class="title">Especialização</header>
  <ul class="specialization-list">
    {{#each specialization}}
    <li>
      <article class="specialization">
        <header class="specialization-title">
          {{> diplomaIcon}} {{this.title}}
        </header>
        <div class="content">
          <p>Instituição: </p>
          <p>{{this.institution}}</p>
          <p>Período: </p>
          <p>{{this.period}}</p>
          <p>Descrição: </p>
          <p>{{this.description}}</p>
        </div>
      </article>
    </li>
    {{/each}}
  </ul>
</section>
{{/if}}