{{#if graduation}}
<section id="graduation">
  <h1 class="title">Formação</h1>
  <ul class="graduation-list">
    {{#each graduation}}
    <li>
      <article class="graduation">
        <h1 class="graduation-title">
          {{> institutionIcon}} {{this.title}}
        </h1>
        <div class="content">
          <p>Instituição: </p>
          <p>{{this.institution}}</p>
          <p>Período: </p>
          <p>{{this.period}}</p>
          <p>Descrição: </p>
          <p>{{this.description}}</p>
        </div>
      </article>
    </li>
    {{/each}}
  </ul>
</section>
{{/if}}